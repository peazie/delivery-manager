{% extends 'BuildDeliveryBundle::default.html.twig' %}

{% block content %}
<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <h1>Deploying build <span class="label label-default">{{ build_number }}</span> to <span class="label label-warning">Test</span></h1>
    </div>

    <div class="row">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <b>Action</b>
            </div>

            <div class="panel-body" style="text-align: center">
                <a href="#" class="btn btn-danger btn-lg"><b>Confirm Deploy to Test</b></a>
            </div><!-- panel-body -->
        </div><!-- info panel -->

        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Commits</b>
            </div>

            <div class="panel-body">

                <table class="table">
                <thead>
                    <tr>
                        <th>Rev</th> <th>Message</th> <th>Committer</th>
                    </tr>
                </thead>
                <tbody>
                {% for c in data.changeSet.items %}
                    <tr>
                        <td><a href="https://bitbucket.org/peazie/dreadful-tiger/commits/">{{ c.node|truncate(6) }}</a></td>
                        <td>{{ c.msg|truncate(55) }}</td>
                        <td>{{ c.author.fullName|truncate(10) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>

            </div><!-- panel-body -->
        </div><!-- commit panel -->

    </div><!-- row -->

</div><!-- container -->
{% endblock content %}



