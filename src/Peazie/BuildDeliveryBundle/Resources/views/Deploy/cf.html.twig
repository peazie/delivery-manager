{% extends 'BuildDeliveryBundle::default.html.twig' %}

{% block content %}
<div class="container">

    <div class="page-header">
        <h2><span class="glyphicon glyphicon-cloud-upload"></span> Deployment</h2>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>Stack Create Result</b>
        </div>

        <div class="panel-body">
            <table class="table">
            <thead>
                <tr>
                    <th width="20%">Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Stack Name</td>
                    <td>{{ data.StackName }}</td>
                </tr>

                <tr>
                    <td>ARN</td>
                    <td><a href="#">{{ data.StackId }}</a></td>
                </tr>
            </tbody>
            </table>
        </div><!-- panel-body -->
    </div><!-- panel -->


    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Stack Create Config</b>
        </div>

        <div class="panel-body">
            <table class="table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
            {% if data.Parameters is iterable %}
                {% for p in data.Parameters %}
                <tr>
                    <td>{{ p.ParameterKey }}</td>
                    <td>{{ p.ParameterValue }}</td>
                </tr>
                {% endfor %}
            {% endif %}
            </tbody>
            </table>
        </div><!-- panel-body -->
    </div><!-- panel -->

    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Stack Create Tags</b>
        </div>

        <div class="panel-body">
            <table class="table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
            {% if data.Tags is iterable %}
                {% for t in data.Tags %}
                <tr>
                    <td>{{ t.Key }}</td>
                    <td>{{ t.Value }}</td>
                </tr>
                {% endfor %}
            {% endif %}
            </tbody>
            </table>
        </div><!-- panel-body -->
    </div><!-- panel -->

</div><!-- container -->
{% endblock content %}



